{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "inherits": [ "vs", "ninja", "lld" ],
      "binaryDir": "${sourceDir}/build-${presetName}/build",
      "installDir": "${sourceDir}/build-${presetName}/install",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C:/LLVM/src/llvm/build/bootstrap/install/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "C:/LLVM/src/llvm/build/bootstrap/install/bin/clang-cl.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "project-debug",
      "inherits": [ "default", "debug_msvcrt" ],
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/LLVM/src/llvm/build/llvm-debug/install"

      }
    },
    {
      "name": "project-release",
      "inherits": [ "default", "release" ],
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/LLVM/src/llvm/build/llvm-release/install"
      }
    }
  ]
}
